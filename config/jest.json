{
  "name": "redux-typescript",
  "roots": [
    "../src/",
    "../core/"
  ],
  "moduleNameMapper": {
    "@core/(.*)": "<rootDir>/../core/$1"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "tsConfig": {
      "tsConfigFile": "tsconfig.json"
    }
  },
  "testMatch": [
    "**/*.spec.+(ts|tsx|js)"
  ],
  "coverageDirectory": "../reports",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "../src/**/*.{ts,tsx}",
    "../core/**/*.{ts,tsx}",
    "!**/node_modules/**"
  ]
}