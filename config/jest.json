{
  "name": "redux-typescript",
  "roots": ["../src/"],
  "moduleNameMapper": {
    "@core/(.*)": "<rootDir>/../core/$1"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "tsConfig": {
      "tsConfigFile": "tsconfig.json"
    }
  },
  "testMatch": ["**/*.spec.+(ts|tsx|js)"]
}
